!!! 5
%html
  %head
    %meta(charset="utf-8")
    %meta(name="ROBOTS" content="NOODP")
    %title Five Tool Development: Custom Software Development and Consulting
    %meta(name="description" content="Five Tool Development helps small businesses do big things.")
    %meta(name="keywords" content="Web Development, Rails, Ruby, Apps")
    %meta(name="author" content="Five Tool Development, Inc.")
    %meta{name: "twitter:site", content: "fivetooldev"}
    %meta{name: "twitter:title", content: "Five Tool Development: Custom Software Development and Consulting"}
    %meta{name: "twitter:description", content: 'Five Tool Development builds web applications and provides consulting to small businesses.'}
    %meta{name: "og:url", content: "http://www.fivetool.io"}
    %meta{name: "og:title", content: "Five Tool Development: Custom Software Development and Consulting"}
    %meta{name: "og:site_name", content: "Five Tool Development: Custom Software Development and Consulting"}
    %meta{name: "og:type", content: 'website'}
    %meta{name: "og:description", content: 'Five Tool Development builds web applications and provides consulting to small businesses.'}

    %a{href: "https://plus.google.com/103531392410254836222", rel: "publisher"}Google+
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Lato:400,300"
    = stylesheet_link_tag :application, :media => 'all'
    = csrf_meta_tags
    = favicon_link_tag

  %body
    %header#site-header
      .container
        .logo
          %a{href: root_path}
            %h1.brand Five Tool Dev

        %nav
          %ul
            %li
              %a{href: page_path("about")} about
            %li
              %a{href: 'http://blog.fivetool.io'} blog
            %li
              %a{href: root_path(anchor: 'contact-form')} contact

    .content

      = yield

    %footer
      .container
        %section#copyright-tag
          .copyright
            &copy 2013 Five Tool Development, Inc.
          %ul.social-links
            %li
              %a{href: "http://twitter.com/fivetooldev"}
                = image_tag "http://s3.amazonaws.com/fivetooldev-homepage/twitter-flat.png", size: "40x40"
            %li
              %a{href: "http://facebook.com/fivetooldev"}
                = image_tag "http://s3.amazonaws.com/fivetooldev-homepage/facebook-flat.png", size: "40x40"
            %li
              %a{href: "http://github.com/fivetooldev"}
                = image_tag "http://s3.amazonaws.com/fivetooldev-homepage/github-flat.png", size: "40x40"
            %li
              %a{href: "http://blog.fivetool.io/rss"}
                = image_tag "http://s3.amazonaws.com/fivetooldev-homepage/rss-flat.png", size: "40x40"

        %section#address
          %address
            %strong Five Tool Development, Inc.
            %br/
            1760 Euclid Street NW, #502
            %br/
            Washington, DC 20009
            %br/
            %i.batch.batch-bell
            202.507.9041
            %br/
            %i.batch.batch-envelope
            %em= mail_to "info@fivetool.io"
            %br/
            %i

    = javascript_include_tag 'application'
