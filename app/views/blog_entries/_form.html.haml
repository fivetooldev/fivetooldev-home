= form_for @blog_entry do |f|
  - if @blog_entry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@blog_entry.errors.count, "error")} prohibited this blog_entry from being saved:"
      %ul
        - @blog_entry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
